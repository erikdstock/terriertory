<%= render '/shared/notifications' %>

<%= form_for([:user, @dog])  do |f| %>

  <div class = "row">
    <div class = "large-4 medium-8 columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class = "large-4 medium-8 columns">
      <%= f.label :breed %>
      <%= f.text_field :breed %>
    </div>
  </div>

  <div class = "row">
    <div class = "medium-3 columns">
      <%= f.label :birthday %>
      <%= f.date_field :birthday %>
    </div>
  </div>

  <div class = "row">
    <div class='medium-3 columns'>
      <%= f.submit "register", {class: "button"} %>
    </div>
  </div>

  <div class = "row">
    <div class='medium-3 columns'>
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>
    <div class='medium-3 columns'>
      <%= f.submit "register", {class: "button"} %>
    </div>
  </div>
<% end %>
