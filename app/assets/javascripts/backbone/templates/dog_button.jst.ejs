<div class = "row">
  <div class = "small-centered columns ">
    <a class='button small expand radius small-12 '><%= name %></a>
  </div>
  <div class = "dog-details" style = "display:none">
    <div class = "row" >
      <div class = "small-3 small-centered columns">
        <img src= "https://s3-us-west-2.amazonaws.com/terriertory/dogs/<%=id%>/avatar/thumb.jpg">
      </div>
      <div class="row">
        <div class="small-6 small-centered columns">
          <%= breed %>
        </div>
      </div>
      <div class="row">
        <div class="small-6 small-centered columns">
          <%= distanceTraveled %> miles
        </div>
      </div>
      <div class="row">
        <div class="small-6 small-centered columns">
          <%= distanceScore%> pts
        </div>
      </div>
    </div>
  </div>
</div>
